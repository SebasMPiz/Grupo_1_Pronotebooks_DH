<!DOCTYPE html>
<html>
<!-- COMIENZO DEL HEAD -->

<%- include ("../partials/head") -%>

<!-- COMIENZO BODY -->
<body>
        <div class ="logowhatsapp">
            <img src="/img/whatsapp-logo.svg"  alt="Whatsapp" class ="logosredes"/>
        </div>

<%- include ("../partials/header") -%>
    <div class = "cajacelesteregistro"></div>
    <div class = "tituloregistro">
    <h2>Completa tus datos</h2>
    </div>
    <form class = "listadoregistroproductos" action = "/products/" method="POST" enctype="multipart/form-data">
            
        <div class = "errores">

            <ul></ul> 
            
        </div>
        
            <div class = "cajaregistro">
            <div class = "camposregistro">


                <% if (locals.errors) {%>
                    <% errors.forEach(error =>{%>
                        <p class = "camposregistro"></p> <%= error.msg %>
                    <%})} %>
                 
                <label for="marca">Marca</label><br>
               <select class = "ingresodato"name = "marca" id = "marca">
                <% for (i=0; i < brand.length;i++) { %>
                    <option value ="<%=brand[i].brand%>"><%=brand[i].brand%></option>                        
                <% } %> 
                <option value = "agregar marca">agregar marca</option>
                </select>
             </div>        
            <div class = "camposregistro">
                <label for="serie">Serie</label><br>
                <input class="ingresodato" placeholder = "Ej: ThinkPad, Pavilion" type="text" id="serie" name="serie">
            </div> 
            <div class = "camposregistro">
                <label for="modelo">Modelo</label><br>
                <input class="ingresodato" placeholder = "Modelo" type="text" id="modelo" name="modelo">
            </div>
            <div class = "camposregistro">
                <label for="descripcion">Descripcion</label><br>
                <input class="ingresodato" placeholder = "Descripcion"  type="text" id="descripcion" name="descripcion">
            </div> 
            <div class = "camposregistro">
                <label for="procesador">Procesador</label><br>
                <input class="ingresodato" placeholder = "Ej: AMD, Intel, Otros" type="text" id="procesador" name="procesador">
            </div>
            <div class = "camposregistro">
                <label for="graficos">Gráficos</label><br>
                <input class="ingresodato" placeholder = "Ej: Nvidia, Radeon" type="text" id="graficos" name="graficos">
            </div> 
            <div class = "camposregistro">
                <label for="memoria">Memoria</label><br>
                <input class="ingresodato" placeholder = "Capacidad Memoria" type="text" id="memoria" name="memoria">
            </div> 
            <div class = "camposregistro">
                <label for="almacenamiento">almacenamiento</label><br>
                <input class="ingresodato"  placeholder = "Capacidad almacenamiento"  type="text" id="almacenamiento" name="almacenamiento">
            </div> 
            <div class = "camposregistro">
                <label for="sistemaOperativo">Sistema Operativo</label><br>
                <input class="ingresodato"  placeholder = "Ej: Windows, Mac, etc"  type="text" id="sistemaOperativo" name="sistemaOperativo">
            </div> 
            <div class = "camposregistro">
                <label for="pantalla">Pantalla</label><br>
                <input class="ingresodato" placeholder = "Tamaño de pantalla"  type="text" id="pantalla" name="pantalla">
            </div> 
            <div class = "camposregistro">
                <label for="color">Color</label><br>
                <input class="ingresodato"  placeholder = "Color"  type="text" id="color" name="color">
            </div> 
            <div class = "camposregistro">
                <label for="precio">Precio</label><br>
                <input class="ingresodato"  placeholder = "Precio"  type="text" id="precio" name="precio">
            </div> 
            <div class = "camposregistro">
                <label for="codigomodelo">Codigo</label><br>
                <input class="ingresodato"  placeholder = "Codigo de Fabricante"  type="text" id="codigomodelo" name="codigomodelo">
            </div> 
            <div  class = "camposregistro" style ="display:flex; flex-direction:column">
                <label style="margin-bottom:7px" for="slotExpansion">Posee Slot de expansion</label>
                <p><input type="radio" value="Si" name ="slotExpansion"> Si</p>
                <p><input type="radio" value="No" name ="slotExpansion"> No</p>
            </div> 
            <div  class = "camposregistro" style ="display:flex; flex-direction:column">
                <label style="margin-bottom:7px" for="oferta">Esta en Oferta:</label>
                <p><input type="radio" value="Si" name ="oferta"> Si</p>
                <p><input type="radio" value="No" name ="oferta"> No</p>
            </div> 
            <div  class = "camposregistro" style ="display:flex; flex-direction:column">
                <label style="margin-bottom:7px" for="slotExpansion">Categoria</label>
                <p><input type="radio" value="Gaming" name ="category" > Gaming</p>
                <p><input type="radio" value="Business" name ="category"> Business</p>
                <p><input type="radio" value="Home" name ="category"> Home</p>
                <p><input type="radio" value="Industrial" name ="category"> Industrial</p>
            </div> 
            <div class = "camposregistro">
                <label for="image">Imagen de Producto</label><br>
                <input type="file" name="image">
            </div> 
        </div>


            <div class ="cajabotones">
                <div>
                    <button type="submit" class="boton">Guardar producto</button>
                </div> 
                <div>
                    <a href = "/products/create"><button class = "boton">Regresar</button></a>
                </div>
                </div> 
                       
    </form>
 
    <!-- COMIENZO FOOTER -->

<%- include ("../partials/footer") -%>
<script src="/js/validationProducts.js"></script> 
    </body>
</html>
