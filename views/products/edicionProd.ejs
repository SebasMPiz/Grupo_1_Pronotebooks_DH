<!DOCTYPE html>
<html>
<!-- COMIENZO DEL HEAD -->

<%- include ("../partials/head") -%>

<!-- COMIENZO BODY -->
<body>
        <div class ="logowhatsapp">
            <img src="/img/whatsapp-logo.svg"  alt="Whatsapp" class ="logosredes"/>
        </div>

<%- include ("../partials/header") -%>

    <h4 class="crearProd">Edita el producto</h4>
    <form action="/creacionProd" method="GET">    
        <main class="mainCreacion">
            <article>
                <p>
                    <label  for="productName">Marca</label>
                </p>
                <input class="creacionBox" type="text" id="marca" name="marca" required>

                <br>
                <br>

                <p>
                    <label  for="productDesc">Descripción</label>
                </p>
                <input class="creacionBox" type="text" id="descrption" name="description">

                <br>
                <br>

                <p class="productPic">
                    <label  for="productPic">Foto del producto</label>
                </p>
                <div class="custom-input-file col-md-6 col-sm-6 col-xs-6">
                    <input  class="input-file" type="file"  id="image" name="image" accept="image/png, .jpeg, .jpg, image" required>Elegir Imagen...
                </div>
            </article>

            <article>
                <p>
                    <label  for="productSize">Color</label>
                </p>
                <input class="creacionBox" type="text" id="color" name="color">
                
                <br>
                <br>

                <p>
                    <label  for="productCategory">Categoría</label>
                </p>
                <select class="creacionBox" name="categoría" id="categoría">

                    <option>Gamer</option>
                    
                    <option>Hogar</option>
                    
                    <option>Diseño</option>

                    <option>Industrial</option>
                    
                </select>

                <br>
                <br>

                <p>
                    <label  for="productPrice">Precio</label>
                </p>
                <input class="creacionBox" type="text" id="price" name="price" required>
            </article>
        </main>
        <div class="botonCrear">
             <input   type="submit" value="Crear!">
        </div>
    </form>


    <!-- COMIENZO FOOTER -->

<%- include ("../partials/footer") -%>

    </body>
</html>
